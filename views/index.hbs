<div class="container">
    <h2>XKCD Comics Clone</h2>
    <div class="card">
        <div class="card-header"><strong>Comic Title:</strong> {{data.title}}</div>
        <div class="card-body"><strong>Publish Date:</strong> {{data.day}}-{{data.month}}-{{data.year}}</div>
        <div class="card-body" style="align-self:center"><img src="{{data.img}}" alt="{{data.alt}}"></div>
        <div class="card-body"><strong>Transcript:</strong> {{data.transcript}}</div>
        <div class="card-footer">
            <div class="btn-wrapper text-center d-flex justify-content-between">
                <a onClick="decrement({{data.num}});" class="btn btn-warning"><i
                        class="bi bi-chevron-left"></i>Previous</a>
                <a onClick="random();" class="btn btn-warning">Random</a>
                <a onClick="increment({{data.num}});" class="btn btn-warning">Next<i
                        class="bi bi-chevron-right"></i></a>
            </div>
        </div>
    </div>
</div>